{
  "name": "@common-fp/root",
  "private": true,
  "workspaces": [
    "./pkg/*"
  ],
  "author": "Phil Olson",
  "license": "SEE LICENSE IN license.txt",
  "type": "module",
  "exports": {
    "./config": "./config.mjs"
  },
  "scripts": {
    "build": "sh ./scripts/build.sh",
    "check-deps": "sh ./scripts/check-deps.sh",
    "lint": "pnpm run --recursive lint",
    "test": "echo 'use either test-full or test-lite' && exit 1",
    "test-full": "sh ./scripts/test.sh",
    "test-lite": "sh ./scripts/test.sh --lite",
    "validate": "pnpm build && pnpm check-deps && pnpm lint && pnpm test-full"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@common-fp/eslint-config": "workspace:*",
    "@common-fp/prettier-config": "workspace:*",
    "depcheck": "^1.4.7",
    "eslint": "^9.32.0",
    "lean-package": "^1.4.0",
    "prettier": "^3.3.3"
  }
}
